# TELEGRAM BOT
# -------------------------------------------
# Получить токен: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# -------------------------------------------
# VIP ПОЛЬЗОВАТЕЛИ (админы с безлимитным доступом)
# -------------------------------------------
# Список username через запятую (без @)
# Эти пользователи получают:
# - Безлимитные сообщения
# - Доступ к статистике (/stats)
# - Обход всех ограничений
WHITELIST_USERNAMES=Den_Shev_007,Ir_Shev,Artur_sheff,Arina_sheff

# -------------------------------------------
# ПЛАТЕЖИ - USDT
# -------------------------------------------
# Адрес кошелька USDT BEP-20 для приема платежей
# Оставь пустым если не используешь USDT
USDT_WALLET_ADDRESS=0xYourBEP20WalletAddressHere

# BscScan API Key для автопроверки USDT транзакций
# Получить бесплатно: https://bscscan.com/myapikey
# Оставь пустым для ручной проверки платежей
BSCSCAN_API_KEY=

# -------------------------------------------
# НАСТРОЙКИ БОТА (опционально)
# -------------------------------------------
# Минимальная задержка между сообщениями пользователя (секунды)
# Защита от спама
MIN_MESSAGE_COOLDOWN=3

# Лимит бесплатных сообщений для новых пользователей
FREE_MESSAGE_LIMIT=25

# -------------------------------------------
# ВНЕШНИЕ СЕРВИСЫ (не используются сейчас)
# -------------------------------------------
# Google Cloud Text-to-Speech (не используется, работает Coqui TTS локально)
GOOGLE_APPLICATION_CREDENTIALS=

# Pexels API для поиска изображений (не реализовано)
PEXELS_API_KEY=

# Unsplash API резервный (не реализовано)
UNSPLASH_ACCESS_KEY=

